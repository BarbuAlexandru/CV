
@using Microsoft.AspNetCore.Identity
@using AirWAD.Models.DataBase
@using AirWAD.ViewModels

@model AirWAD.ViewModels.HomeViewModel

@{
    Layout = null;
    ViewData["Title"] = "Home Page";
}

@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager



<style>
    #container {
        width: 1000px;
        margin: auto;
    }

    #header {
        background-color: #808080;
        color: white;
        padding: 10px;
        height: 135px;
    }

    #h_name {
        margin-left: 20px;
        width: 50%;
        font-weight: bold;
        float: left;
        font-size: 40px;
    }

    #h_buttons {
        margin-right: 20px;
        margin-top: 30px;
        width: 40%;
        float: right;
        vertical-align: text-bottom;
        text-align: right;
    }

    button {
        width: 160px;
        height: 80px;
        font-size: 25px;
    }

    .button {
        width: 160px;
        height: 80px;
        font-size: 25px;
    }

    #content {
        background-color: #FFFFFF;
        text-align: center;
    }

    #menu {
        font-size: 25px;
    }

    ul {
        list-style-type: none;
        margin: 0;
        padding: 0;
        overflow: hidden;
        background-color: #333;
    }

    li {
        float: left;
        border-right: 1px solid #bbb;
    }

        li a {
            display: block;
            color: white;
            text-align: center;
            padding: 20px 18px;
            text-decoration: none;
        }

            li a:hover {
                background-color: #111;
            }

    #c_content {
        height: 2000px;
    }

    #footer {
        background-color: #808080;
        text-align: center;
        clear: both;
        padding: 10px;
        font-size: 20px;
    }
</style>

<title>AirWAD - Home page</title>

