@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}
    <link rel="stylesheet" href="~/css/addPlaneType.css?v=<%= DateTime.Now.Ticks %" />

<h1 class="title">@ViewData["Title"]</h1>

<div style="text-align: center;">
    <div>
        <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h4>Create a new account.</h4>
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="labels">
                <div class="column">
                    <div>
                        <label asp-for="Input.Username"></label>
                        <input class="boxes" asp-for="Input.Username" class="form-control" />
                        <span asp-validation-for="Input.Username" class="text-danger"></span>
                    </div>
                    <div>
                        <label asp-for="Input.Email"></label>
                        <input class="boxes" asp-for="Input.Email" class="form-control" />
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <div>
                        <label asp-for="Input.FirstName"></label>
                        <input class="boxes" asp-for="Input.FirstName" class="form-control" />
                        <span asp-validation-for="Input.FirstName" class="text-danger"></span>
                    </div>
                    <div>
                        <label asp-for="Input.LastName"></label>
                        <input class="boxes" asp-for="Input.LastName" class="form-control" />
                        <span asp-validation-for="Input.LastName" class="text-danger"></span>
                    </div>
                    <div>
                        <label asp-for="Input.PhoneNo"></label>
                        <input class="boxes" asp-for="Input.PhoneNo" class="form-control" />
                        <span asp-validation-for="Input.PhoneNo" class="text-danger"></span>
                    </div>
                    <div>
                        <label asp-for="Input.Address"></label>
                        <input class="boxes" asp-for="Input.Address" class="form-control" />
                        <span asp-validation-for="Input.Address" class="text-danger"></span>
                    </div>
                    <div>
                        <label asp-for="Input.CI_Passport"></label>
                        <input class="boxes" asp-for="Input.CI_Passport" class="form-control" />
                        <span asp-validation-for="Input.CI_Passport" class="text-danger"></span>
                    </div>
                    <div>
                        <label asp-for="Input.Role"></label>
                        <input class="boxes" asp-for="Input.Role" class="form-control" />
                        <span asp-validation-for="Input.Role" class="text-danger"></span>
                    </div>
                    <div>
                        <label asp-for="Input.Password"></label>
                        <input class="boxes" asp-for="Input.Password" class="form-control" />
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                    <div>
                        <label asp-for="Input.ConfirmPassword"></label>
                        <input class="boxes"  asp-for="Input.ConfirmPassword" class="form-control" />
                        <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <br />
            <button type="submit" class="buttons">Register</button>
        </form>
    </div>
