
@{
    Layout = null;
    ViewData["Title"] = "Register Page";
}

<style>
    #container {
        width: 1000px;
        margin: auto;
    }

    #header {
        background-color: #808080;
        color: white;
        padding: 10px;
        height: 135px;
    }

    #h_name {
        margin-left: 20px;
        width: 50%;
        font-weight: bold;
        float: left;
        font-size: 40px;
    }


    #content {
        height: 800px;
        background-color: #FFFFFF;
        text-align: center;
        padding: 100px;
        font-size: 25px;
    }

    #c_info {
        height: 630px;
        line-height: 1.8;
    }

    #c_login {
        height: 80px;
    }

    #c_register {
        height: 100px;
    }

    input {
        height: 40px;
        width: 250px;
        font-size: 25px;
    }

    button {
        height: 40px;
        width: 250px;
        font-size: 25px;
    }

    #footer {
        background-color: #808080;
        text-align: center;
        clear: both;
        padding: 10px;
        font-size: 20px;
    }
</style>

<title>AirWAD - Register Page</title>

<body style="background-color:#76C25B">

    <div id="container">

        <div id="header">
            <div id="h_name">
                <p>AirWAD - Register Page</p>
            </div>
        </div>

        <div id="content">
            <form action="@Url.Action("Home", "Client")">
                <div id="c_info">
                    <label for="fullName">Full Name:</label><br>
                    <input type="text" id="fullName" name="fullName" value="" required><br>
                    <label for="birthday">Birthday:</label><br>
                    <input type="date" id="birthday" name="birthday" required><br>
                    <label for="email">E-Mail:</label><br>
                    <input type="text" id="email" name="email" value="" required><br>
                    <label for="phoneNO">Phone Number:</label><br>
                    <input type="text" id="phoneNO" name="phoneNO" required><br>
                    <label for="password">Password:</label><br>
                    <input type="password" id="password" name="password" value="" required><br>
                    <label for="confirmPassword">Confirm Password:</label><br>
                    <input type="password" id="confirmPassword" name="confirmPassword" value="" required><br>
                </div>
                <div id="c_register">
                    <input class="button" type="submit" value="Register">
                </div>
                <div id="c_login">
                    <label for="login">Already have an account?</label><br>
                    <a href="@Url.Action("Login", "Client")"><input class="button" type="button" value="Login"></a>
                </div>
            </form>
        </div>

        <div id="footer">
            <p> Copyright Lab - WAD, Register Page</p>
        </div>

    </div>

</body>