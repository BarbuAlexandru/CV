@using PocketPlane.Models.Admins;
@model AdminAddPlaneTypeViewModel;
@{
    ViewData["Title"] = "AddPlaneType";
}

<!DOCTYPE html>
<html>
<head>
    <title>PocketPlane</title>
    <link rel="stylesheet" href="~/css/addPlaneType.css?v=<%= DateTime.Now.Ticks %" />

</head>

<body>

   

        <h2 class="title">Add Plane Type</h2>
        <br>
        <form asp-action="AddPlaneType" method="post">
            <div style="text-align: center;">
                <div class="labels">

                    <label for="fname"><b>Model:</b></label>
