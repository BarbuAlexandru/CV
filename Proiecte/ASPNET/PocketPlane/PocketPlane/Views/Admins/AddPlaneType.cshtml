                    <label for="phonenr"><b>CapacityEconomy:</b></label>
                    <input asp-for="CapacityEconomy" class="boxes" type="number" placeholder="CapacityEconomy..." name="CapacityEconomy"><br>

                    <br>
                </div>
                <br />
                <button type="submit" class="buttons">Add Plane Type</button>
            </div>


           </form>




    


</body>

</html>
