@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

    <link rel="stylesheet" href="~/css/addPlaneType.css?v=<%= DateTime.Now.Ticks %" />

<h1 class="title">@ViewData["Title"]</h1>
<div>
    <div style="text-align: center;">
        <section>
            <form id="account" method="post">
                <h4 style="text-align: center;">Use a local account to log in.</h4>
                <hr />
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label class="labels" asp-for="Input.Username"></label>
                    <input class="boxes" asp-for="Input.Username" class="form-control" />
                    <span asp-validation-for="Input.Username" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="labels" asp-for="Input.Password"></label>
                    <input class="boxes" asp-for="Input.Password" class="form-control" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div>
                    <div>
                        <label  asp-for="Input.RememberMe">
                            <input asp-for="Input.RememberMe" />
                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                        </label>
                    </div>
                </div>
                <div>
                    <button type="submit" class="buttons">Log in</button>
                </div>
                <div>
                    <p>
                        <a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
                    </p>

                </div>
            </form>
        </section>
    </div>
